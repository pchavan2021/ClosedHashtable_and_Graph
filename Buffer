/**
 * 
 */
public class Buffer implements BufferADT {
    private int[] data;
    private boolean isDirty;

    public Buffer(int bufferSize) {
        this.data = new int[bufferSize];
        this.isDirty = false;
    }


    public int[] readBlock() {

        return data;
    }


    @Override
    public int[] getDataPointer() {
        return data;
    }


    @Override
    public void markDirty() {
        this.isDirty = true;
    }


    @Override
    public void flush() {
        if (isDirty) {
            // In a real-world implementation, this would write data to disk.
        }
        isDirty = false;
    }
}
