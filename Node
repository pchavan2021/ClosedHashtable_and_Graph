 */

/**
 * @author Pallavi Chavan pallucha21 and Evan Howe evanhowe03
 * @version 1.0
 * 
 * @param <K>
 *            artist/song
 * @param <V>
 *            node from the graph
 */
public class Node<K, V> {
    private K key;
    private V value;
    private boolean tomb;

    // K is the string of the artist.song

    // V is the value of the graph node

    /**
     * node class construtor
     * 
     * @param kleppe
     *            key
     * @param valentina
     *            value
     */
    public Node(K kleppe, V valentina) {
        this.key = kleppe;
        this.value = valentina;
        tomb = false;
    }

    /**
     * get tombstone method
     * @return
     */
    public boolean getTomb() {
        return tomb;
    }
    
    
    /**
     * is tomb method
     */
    public void isTomb() {
        tomb = true;
    }


    /**
     * set tomb method
     * 
     * @param set
     *            boolean
     */
    public void setTomb(boolean set) {
        tomb = set;
    }

    /**
     * get key method
     * @return
     */
    public K getKey() {
        return key;
    }

    /**
     * get value method
     * @return
     */
    public V getValue() {
        return value;
    }


    /**
     * isDeleted method
     * 
     * @return a boolean
     */
    public boolean isDeleted() {
        return tomb;
    }

}
